<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'shipevent-turretloader-windowtitle'}"
               MinSize="300 200"
               SetSize="300 200"
               MaxSize="300 200">
    <BoxContainer Orientation="Vertical" SeparationOverride="4">
        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
            <Label Name="StatusLabel"
                   Text="{Loc 'shipevent-turretloader-status'}" />
            <Label Name="StatusText"
                   Text="-"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
            <Label Name="TurretLabel"
                   Text="{Loc 'shipevent-turretloader-turret'}" />
            <Label Name="TurretUid"
                   Text="0"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
            <Label Name="AmmoLabel"
                   Text="{Loc 'shipevent-turretloader-ammocount'}" />
            <Label Name="AmmoCount"
                   Text="0"/>
        </BoxContainer>
           <Button Name="EjectContainerButton"
                   Text="{Loc 'shipevent-turretloader-ejectcontainerbutton'}"/>
           <Button Name="RefreshButton"
                   Text="{Loc 'shipevent-turretloader-refreshbutton'}"/>
    </BoxContainer>
</DefaultWindow>
